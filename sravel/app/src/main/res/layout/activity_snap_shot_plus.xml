<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SnapShotPlus">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="여행지 등록"
        android:textColor="@color/main_dark_blue"
        android:textSize="15dp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지도"
            android:textColor="@color/blue"></Button>

        <EditText
            android:id="@+id/editText_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="위치를 입력하세요"
            android:textColor="@color/main_dark_blue"
            android:textColorHint="@color/main_dark_blue"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="카메라"
            android:textSize="13dp"
            app:backgroundTint="@color/blue" />

        <Button
            android:id="@+id/button_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="gallery"
            android:textSize="13dp"
            app:backgroundTint="@color/blue" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/imageview_sample" />

    <Switch
        android:id="@+id/switch_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_dark_blue"
        android:text="공개  " />

    <EditText
        android:id="@+id/editText_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="제목"
        android:inputType="text"
        android:textColor="@color/main_dark_blue"
        android:textColorHint="@color/main_dark_blue"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/editText_SimpleDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="간단한 설명"
        android:inputType="text"
        android:textColor="@color/main_dark_blue"
        android:textColorHint="@color/main_dark_blue"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textView_HashTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="해시태그"
        android:textColor="@color/main_dark_blue"
        android:textSize="13dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:id="@+id/radioGroup"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="바다"
                android:textColor="@color/main_dark_blue" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="하늘"
                android:textColor="@color/main_dark_blue" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사람"
                android:textColor="@color/main_dark_blue" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="음식"
                android:textColor="@color/main_dark_blue" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="동물"
                android:textColor="@color/main_dark_blue" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="명소"
                android:textColor="@color/main_dark_blue" />
        </RadioGroup>
    </HorizontalScrollView>

    <Button
        android:id="@+id/button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_dark_blue"
        android:text="등록" />

</LinearLayout>